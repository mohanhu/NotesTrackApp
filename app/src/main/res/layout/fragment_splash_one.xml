<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".splash.presentation.fragment.SplashOneFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/inset_medium"
        app:srcCompat="@drawable/v1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes_track"
        android:textAppearance="@style/TextAppearance.App.TitleLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inset_medium"
        android:text="@string/v1_desc"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/inset_large_medium"
        android:textAppearance="@style/TextAppearance.App.BodyMedium" />

</LinearLayout>